pipeline{
    
    tools{
        maven 'mymaven'
    }
    
    agent any  // node where we have to run pipeline
    stages{
        stage('Clone the repo')
        {
            steps{
            git 'https://github.com/ashu38609/CodeDemo.git'
            }
        }
        
        stage('CompileCode'){
            steps{
                sh 'mvn compile'
            }
        }
        
        stage('TestCode'){
            steps{
                sh 'mvn test'
            }
        }
        
        stage('PackgeCode'){
            steps{
                sh 'mvn package'
            }
        }
        
        
    }
}
